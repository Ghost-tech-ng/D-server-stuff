# Discord Bot Token (REQUIRED)
# Get this from: https://discord.com/developers/applications
# Navigate to your bot -> Bot -> Reset Token
DISCORD_BOT_TOKEN=your_bot_token_here

# Timer Configuration (OPTIONAL)
# How many hours until the bot auto-disables (default: 24)
TIMER_HOURS=24

# Reporting Channel ID (OPTIONAL)
# Discord channel ID where periodic reports will be sent
# Right-click channel -> Copy ID (requires Developer Mode enabled)
REPORT_CHANNEL_ID=

# Admin User ID (OPTIONAL)
# Discord user ID who can use the !stopbot command
# Right-click your profile -> Copy ID (requires Developer Mode enabled)
ADMIN_USER_ID=

# Output File (OPTIONAL)
# Custom filename for the join logs (default: join_logs.json)
OUTPUT_FILE=join_logs.json

# Telegram Integration (OPTIONAL)
# Send data files to Telegram before shutdown
# Get bot token from @BotFather on Telegram
TELEGRAM_BOT_TOKEN=

# Your Telegram chat ID
# Get it from @userinfobot on Telegram (send /start)
TELEGRAM_CHAT_ID=
